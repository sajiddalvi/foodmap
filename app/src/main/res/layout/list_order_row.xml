<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:id="@+id/list_order_border"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:background="?android:attr/listDivider"
        android:visibility="gone">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >

    <TextView
        android:id="@+id/list_order_row_who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="person"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@android:color/holo_blue_light"
        android:clickable="true"
        android:onClick="callPressed"
        android:visibility="gone" />

        <TextView
            android:id="@+id/list_order_row_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-01-14 08:25"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:layout_weight="0"
            android:visibility="gone" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/list_order_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="name"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/list_order_row_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="$5.00"
            />

        <TextView
            android:id="@+id/list_order_row_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="2"
            />

        <TextView
            android:id="@+id/list_order_row_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="new"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
        <TextView
            android:id="@+id/list_order_row_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Total:"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/list_order_row_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$24.50"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:visibility="gone" />
            </LinearLayout>

        <TextView
            android:id="@+id/list_order_row_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:text="Status"
            android:textColor="#3b5998"
            android:layout_weight="0"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>