<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_logo"
        android:longClickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serve_button_text"
        android:id="@+id/serve_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/main_logo"
        android:layout_alignStart="@+id/main_logo"
        android:layout_alignRight="@+id/main_logo"
        android:layout_alignEnd="@+id/main_logo"
        android:onClick="onServeButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_button_text"
        android:id="@+id/find_button"
        android:layout_below="@+id/serve_button"
        android:layout_alignLeft="@+id/serve_button"
        android:layout_alignStart="@+id/serve_button"
        android:layout_marginTop="42dp"
        android:layout_alignRight="@+id/serve_button"
        android:layout_alignEnd="@+id/serve_button"
        android:onClick="onFindButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_order_button_text"
        android:id="@+id/list_order_button"
        android:layout_below="@+id/find_button"
        android:layout_alignLeft="@+id/find_button"
        android:layout_alignStart="@+id/find_button"
        android:layout_marginTop="42dp"
        android:layout_alignRight="@+id/find_button"
        android:layout_alignEnd="@+id/find_button"
        android:onClick="onOrderListButtonClick" />

</RelativeLayout>
